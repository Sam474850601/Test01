<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView android:layout_width="68dp" android:layout_height="68dp"
               android:scaleType="centerCrop"
               tools:src="@drawable/ic_launcher_background"

               app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="12dp"
               android:layout_marginStart="12dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/appIconIv"/>


    <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Hong Kong 01"
            style="@style/item_title"
            android:maxWidth="68dp"
            app:layout_constraintTop_toBottomOf="@+id/appIconIv"
            app:layout_constraintStart_toStartOf="@+id/appIconIv"
            android:layout_marginTop="4dp" android:id="@+id/titleTv"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Hong Kong 01 Sport"
            android:maxWidth="68dp"
            style="@style/item_desc"
            android:layout_marginTop="1dp"
            app:layout_constraintStart_toStartOf="@+id/titleTv"
            app:layout_constraintTop_toBottomOf="@+id/titleTv" android:id="@+id/descTv"
    />



</androidx.constraintlayout.widget.ConstraintLayout>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="item_title">
        <item name="android:textColor">@color/item_title</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="item_desc">
        <item name="android:textColor">@color/item_desc</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="item_desc_big" parent="item_desc">
        <item name="android:textSize">16sp</item>
    </style>




    <style name="item_desc_small" parent="item_desc">
        <item name="android:textSize">10sp</item>
    </style>



    <style name="likesRb" parent="@android:style/Widget.Holo.RatingBar.Indicator">
        <!--Background Color-->
        <item name="colorControlNormal">#D7D7D7</item>
        <!--Progress Color-->
        <item name="colorControlActivated">#F49800</item>
    </style>





</resources>
